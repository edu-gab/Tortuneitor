<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.tortuneitorpro.PreguntaYAnimalesController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" spacing="15.0"> <!-- Ajustado el espaciado -->
            <Label fx:id="rangoPreguntasLabel" text="Ingrese la cantidad de preguntas:" wrapText="true" /> <!-- AÃ±adido wrapText para que el texto se ajuste -->
            <TextField fx:id="numeroPreguntasTextField" prefWidth="250.0"/> <!-- Definido un ancho preferido para evitar que sea demasiado estrecho -->
            <HBox alignment="CENTER" spacing="15.0"> <!-- Ajustado el espaciado entre botones -->
                <Button text="Confirmar" onAction="#confirmar" />
                <Button text="Cancelar" onAction="#cancelar" />
            </HBox>
        </VBox>
        <Label fx:id="animalesLabel" layoutX="300.0" layoutY="20.0" prefWidth="250.0" wrapText="true" /> <!-- Ajustado layoutX para evitar que se monte con el VBox -->
    </children>
</AnchorPane>

